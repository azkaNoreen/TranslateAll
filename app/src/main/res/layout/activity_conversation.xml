<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Conversation">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbarConversation"
        app:title="Conversation"
        android:background="#2D7BF8"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@android:color/white"
        >    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarConversation"
        android:id="@+id/clearRelative"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        >
        <Button
            android:visibility="invisible"
            android:textColor="#4199E8"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Clear All"
            android:textSize="11sp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/blueoutline"
            android:id="@+id/clearAll"></Button>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/clearRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/conversationRV"
        android:layout_above="@id/button_relative"
        android:layout_marginBottom="10dp"
        ></androidx.recyclerview.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/button_relative"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/firstConversation"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/firstconversationbg"
        android:layout_marginBottom="10dp"
        android:layout_margin="10dp"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_baseline_mic_24"
            android:id="@+id/firstMic"
            android:padding="4dp"
            android:background="@drawable/circle"
            android:layout_marginStart="10dp"
            ></ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/firstMic"
            android:id="@+id/left"

            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="16dp"
            ></TextView>
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/swaplanguage"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/swapper">

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle"
                android:src="@drawable/ic_baseline_swap_horiz_24"></ImageButton>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/secondConversation"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/secondconversationbg"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/rightCOnveration"
            android:layout_width="80dp"
            android:text="English"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="8dp"
            android:drawableLeft="@drawable/ic_baseline_arrow_drop_down_24"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="16dp"
            ></TextView>
        <ImageButton
            android:id="@+id/secondMic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/circle"

            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_mic_24"
            ></ImageButton>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>