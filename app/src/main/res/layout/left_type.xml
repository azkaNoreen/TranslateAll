<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/leftconversation"

    >
    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/leftText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:textColor="#3375fd"
        android:textSize="14dp" />

    <RelativeLayout
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/leftText"
        android:layout_marginTop="10dp"
        android:background="#854B4B"
        />

    <TextView
        android:id="@+id/belowc_chat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="5dp"
        android:background="@null"
        android:textColor="#3375fd"
        android:text="a"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/linear6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/belowc_chat2"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_baseline_content_copy_24" />

        <ImageView
            android:id="@+id/cspeaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:tint="#3375FD"
            android:src="@drawable/ic_baseline_volume_up_24" />

    </LinearLayout>

</RelativeLayout>