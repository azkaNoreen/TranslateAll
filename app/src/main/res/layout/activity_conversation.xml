<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Conversation">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbarConversation"
        app:title="Conversation"
        android:background="#2D7BF8"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@android:color/white"
        >    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarConversation"
        android:id="@+id/clearRelative"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        >
        <Button
            android:visibility="invisible"
            android:textColor="#4199E8"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Clear All"
            android:textSize="11sp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/blueoutline"
            android:id="@+id/clearAll"></Button>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/clearRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/conversationRV"
        android:layout_above="@id/firstConversation"
        android:layout_marginBottom="10dp"
        ></androidx.recyclerview.widget.RecyclerView>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/firstConversation"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/firstconversationbg"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        >
        <ImageButton
            android:layout_marginStart="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_mic_24"
            android:id="@+id/firstMic"
            android:padding="3dp"
            android:background="@drawable/circle"
            ></ImageButton>
        <TextView
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/firstMic"
            android:id="@+id/left"
            ></TextView>
        <ImageButton
            android:id="@+id/leftdownArrow"
            android:layout_marginStart="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/left"
            android:background="@null"
            android:src="@drawable/ic_baseline_arrow_drop_down_24"
            android:layout_marginEnd="10dp"
            ></ImageButton>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/swaplanguage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@+id/firstConversation"
        android:background="@drawable/swapper"
        android:layout_marginBottom="10dp"
        >
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_baseline_swap_horiz_24"
            android:background="@drawable/circle"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            ></ImageButton>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/secondConversation"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/secondconversationbg"
        android:layout_toRightOf="@+id/swaplanguage"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_baseline_arrow_drop_down_24"
            android:id="@+id/rightdown"
            android:layout_marginLeft="14dp"
            ></ImageButton>
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rightdown"
            android:id="@+id/rightCOnveration"
            android:lines="1"
            android:ellipsize="end"
            ></TextView>
        <ImageButton
            android:id="@+id/secondMic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_mic_24"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="14dp"
            android:layout_toRightOf="@id/rightCOnveration"
            android:padding="3dp"
            android:background="@drawable/circle"
            ></ImageButton>
    </RelativeLayout>
</RelativeLayout>